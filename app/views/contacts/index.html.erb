<h1>Listing contacts</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Section name</th>
    <th>Contact name</th>
    <th>Contact name kana</th>
    <th>Position</th>
    <th>Office tel number</th>
    <th>Mobile tel number</th>
    <th>Contact fax number</th>
    <th>Contact email</th>
    <th>Birthday</th>
    <th>Family member</th>
    <th>Favorite</th>
    <th>Contact memo</th>
    <th>Del flg</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.customer_id %></td>
    <td><%= contact.section_name %></td>
    <td><%= contact.contact_name %></td>
    <td><%= contact.contact_name_kana %></td>
    <td><%= contact.position %></td>
    <td><%= contact.office_tel_number %></td>
    <td><%= contact.mobile_tel_number %></td>
    <td><%= contact.contact_fax_number %></td>
    <td><%= contact.contact_email %></td>
    <td><%= contact.birthday %></td>
    <td><%= contact.family_member %></td>
    <td><%= contact.favorite %></td>
    <td><%= contact.contact_memo %></td>
    <td><%= contact.del_flg %></td>
    <td><%= link_to 'Show', contact %></td>
    <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
    <td><%= link_to 'Destroy', contact, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

