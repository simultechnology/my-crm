<div id="login-form">
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  <%= form_tag('login') do %>
      <h2>ログイン</h2>
      <div>
        <label for="name">ユーザ名</label><br>
        <%= text_field_tag :name, params[:name], :required => 'true' %>
      </div>
      <div>
        <label for="password">パスワード</label><br>
        <%= password_field_tag :password, params[:password], :required => 'true'%>
      </div>
      <div>
        <%= submit_tag "Login" %>
      </div>
  <% end %>
</div>